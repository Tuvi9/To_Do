<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TODO</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
      <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class='container'>
      <div class="row">
        <div class="col s12 m6">
          <div class="card">
            <div class="card-content">
              <% if (error !== null) { %>
              <div class=" row #80cbc4 teal lighten-2">
                <div class="col s12">
                  <p class="center-align"><%= error %></p>
                </div>
              </div>
              <% } %>
              <span class="card-title">To-Do</span>
              <div class="row">
                <!-- Form for taking input of the user -->
                <form class="col s12" method="post" action="/">
                  <div class="row">
                    <div class ="input-field col s12">
                      <input placeholder="Task" id="task" type="text" name="task">
                      <!-- Input box title -->
                      <label for="task">Insert Task</label>
                    </div>
                  </div>
                  <!-- Submit button -->
                  <input class="btn" type="submit" value="Add Task">
                </form>
              </div>
            </div>
            <div>
              <!-- Added To-Do items list -->
              <ul class="collection">
              <!-- res.render('index', {tasks:tasks}) -->
              <!-- Iterates through each object in (tasks) -->
              <% tasks.forEach((task) => { %>
                <li class="collection-item">
                  <%= task.task %>
                  <!-- Align an element to the right side of its parent element with (secondary-contetn)-->
                  <!-- task.id is used as a unique identifier (1-..) -->
                  <a href="/delete-task/<%= task.id %>" class="secondary-content"><i class="material-icons">delete</i></a>
                </li>
                <% }) %>
                <form style="padding: 10px; margin-left: 10px;" action="/clear-tasks" method="POST">
                  <input class="btn" type="submit" value="CLEAR ALL">
                </form>
              </ul>
            </div>
          </div>
      </div>
    </div>
  </div>            
      <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>